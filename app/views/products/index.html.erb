
<% if params[:q]%>
<br>
<div class="row" style="background-color:white !important;">
<br>
  <h1 class="text-center">Resultados de Busqueda</h1>
  <hr>
  <% @products.each do |product| %>
    
      <div class="large-3 medium-3 small-6 columns panel end" style="height: 335px !important">
          <h4 class="subheader text-center">
            <a href="" data-reveal-id="product-<%= product.id %>" style="font-size:18px;"><%= product.name %></a>
          </h4>

       <% if product.file %>
         <%= image_tag attachment_url(product, :file, :fill, 300, 300), :style => "float:left"  %>
       <% end %>
      
      <div id="product-<%= product.id %>" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">

      
            <div class="large-12 medium-12 small-12 columns">
              <h2 id="modalTitle"><%= product.name %></h2>
            </div>

                <br>
                <div class="medium-4 columns">
                <br>
                <% if product.albums.empty?  %>
                        <%= image_tag attachment_url(product, :file, :fill, 300, 300), :style => "float:left"  %>
                      <% else %>
                         <ul data-orbit data-options="pause_on_hover:false; timer_speed:2500;" >               
                            <% product.albums.shuffle.each do |album| %>
                               <li><%= image_tag attachment_url(album, :file, :fill, 300, 300) %></li>
                             <% end %>
                         </ul>
                    <% end %>
                </div>
                
                <div class="medium-4 columns">
                <% if product.details %>
                  <h4 class="subheader">Descripción</h4>
                  <%= product.details %>
                <% end %>
                
                <h4 class="subheader">Empresa</h4>
            <% product.companies.each do |x| %>
                      <%= x.industry %><br>
                    <% end %>
                
                <h4 class="subheader">Marca </h4>
                  <% product.brands.each do |y| %>
                   <%= y.marks %><br>
                  <% end %>  
                </div>
                <div class="medium-4 columns">
                <h4 class="subheader">Línea de Producto</h4>
                <% product.lines.each do |f| %>
                    <%= f.category%> <br>
                  <% end %> 
                
                <h4 class="subheader">Clientes Habituales</h4>
               
                  <% product.places.each do |g| %>
                    <%= g.establishment %> <br>
                  <% end %>
                </div>


            <a class="close-reveal-modal" aria-label="Close">&#215;</a>
          </div>
    </div>
  <% end %>
  <%= paginate @products %>
  </div>


  <% else %>
  <br>
  <div class="row">
  <div class="large-12 medium-12 small-12 columns show-for-small-up" style="background-color:white !important;">

    <br>

      <img  src="/assets/Catálogo.png" style="width: 75%; display:block; margin:auto;"> 
    
    <br>

        <div class="small-12 large-centered columns hide-for-small-only hide-for-medium-only" style="display:block;margin:auto;">
          <ul class="tabs text-center" data-tab role="tablist">
            <li class="tab-title active"><a href="#panel2-1" style="width: 300px; border-bottom-style: outset; border-radius: 40px;">Tipo de Clientes</a></li>
            <li class="tab-title"><a href="#panel2-2" style="width: 300px; border-bottom-style: outset;border-radius: 40px;margin-left:10px;">Línea de Producto</a></li>

            <li class="tab-title"><a href="#panel2-3" style="width: 300px; border-bottom-style: outset;border-radius: 40px;margin-left:10px;">Marcas</a></li>
          </ul>
        </div>

          <div class="tabs-content hide-for-small-only hide-for-medium-only">
            <section class="content active" id="panel2-1">
              <div class="row  end">
                <div class="small-11 small-centered columns" style="margin-left:83px">
                  <%= link_to image_tag('10.png', size: "150x150"), @primero %> 
                  <%= link_to image_tag('11.png', size: "150x150"), @segundo %> 
                  <%= link_to image_tag('12.png', size: "150x150"), @tercero %> 
                  <%= link_to image_tag('13.png', size: "150x150"), @cuarto %> 
                  <%= link_to image_tag('14.png', size: "150x150"), @quinto %> 
                </div>
                <div class="small-11 small-centered columns" style="margin-left:83px">
                  <%= link_to image_tag('15.png', size: "150x150"), @sexto %> 
                  <%= link_to image_tag('16.png', size: "150x150"), @septimo %> 
                  <%= link_to image_tag('17.png', size: "150x150"), @octavo %> 
                  <%= link_to image_tag('18.png', size: "150x150"), @noveno %> 
                  <%= link_to image_tag('19.png', size: "150x150"), @decimo %> 
                </div>
              </div>
            </section>
            <section class="content" id="panel2-2">
              <div class="row  end">
              <div class="small-11 small-centered columns" style="margin-left:83px">
                  <%= link_to image_tag('1.png', size: "150x150"), @primer %> 
                  <%= link_to image_tag('2.png', size: "150x150"), @segund %> 
                  <%= link_to image_tag('3.png', size: "150x150"), @tercer %> 
                  <%= link_to image_tag('4.png', size: "150x150"), @cuart %> 
                  <%= link_to image_tag('5.png', size: "150x150"), @quint %>
                </div>
                <div class="small-11 small-centered columns" style="margin-left:83px"> 
                  <%= link_to image_tag('6.png', size: "150x150"), @sext %> 
                  <%= link_to image_tag('7.png', size: "150x150"), @septim %> 
                  <%= link_to image_tag('8.png', size: "150x150"), @octav %> 
                  <%= link_to image_tag('9.png', size: "150x150"), @noven %> 
                </div>
              </div>
            </section>
            <section class="content" id="panel2-3">
              <div class="row  end">
              <% @brands.sort.each_slice(20) do |slice| %>
                <% slice.each do |brand| %>
                  <div class="large-3 medium-3 small-12 columns end">
                    <%= link_to "#{brand.marks}", brand_path(brand), class: "button info round text-center", style: "width: 200px;" %>
                  </div>
                <% end %>
              <% end %>
              </div>
            </section>
        </div>

        <ul class="accordion show-for-small-up hide-for-large-up" data-accordion>
          <li class="accordion-navigation">
            <a href="#panel2a" style="border-radius: 40px; border-style: outset; color: white !important;" class="text-center">Tipo de Clientes</a>
            <div id="panel2a" class="content active">
              <ul class="accordion" data-accordion="myAccordionGroup">
                  <div class="row  end">

                    <%= link_to image_tag('10.png', size: "150x150"), @primero %> 
                    <%= link_to image_tag('11.png', size: "150x150"), @segundo %> 
                    <%= link_to image_tag('12.png', size: "150x150"), @tercero %> 
                    <%= link_to image_tag('13.png', size: "150x150"), @cuarto %> 
                    <%= link_to image_tag('14.png', size: "150x150"), @quinto %> 


                    <%= link_to image_tag('15.png', size: "150x150"), @sexto %> 
                    <%= link_to image_tag('16.png', size: "150x150"), @septimo %> 
                    <%= link_to image_tag('17.png', size: "150x150"), @octavo %> 
                    <%= link_to image_tag('18.png', size: "150x150"), @noveno %> 
                    <%= link_to image_tag('19.png', size: "150x150"), @decimo %> 
                    
                  </div>
              </ul>
            </div>
          </li>
          <li class="accordion-navigation">
            <a href="#panel3a" style="border-radius: 40px; border-style: outset; color: white !important;" class="text-center">Línea de Producto</a>
            <div id="panel3a" class="content">
              <ul class="accordion" data-accordion="myAccordionGroup">
                  <div class="row  end">

                      <%= link_to image_tag('1.png', size: "150x150"), @primer %> 
                      <%= link_to image_tag('2.png', size: "150x150"), @segund %> 
                      <%= link_to image_tag('3.png', size: "150x150"), @tercer %> 
                      <%= link_to image_tag('4.png', size: "150x150"), @cuart %> 
                      <%= link_to image_tag('5.png', size: "150x150"), @quint %>
                     
                      <%= link_to image_tag('6.png', size: "150x150"), @sext %> 
                      <%= link_to image_tag('7.png', size: "150x150"), @septim %> 
                      <%= link_to image_tag('8.png', size: "150x150"), @octav %> 
                      <%= link_to image_tag('9.png', size: "150x150"), @noven %> 

                    
                  </div>
              </ul>
            </div>
          </li>
           <li class="accordion-navigation">
            <a href="#panel4a" style="border-radius: 40px; border-style: outset; color: white !important;" class="text-center">Marcas</a>
            <div id="panel4a" class="content">
              <ul class="accordion" data-accordion="myAccordionGroup">
                  <div class="row  end">
                  <% @brands.sort.each_slice(20) do |slice| %>
                    <% slice.each do |brand| %>
                      <div class="large-3 medium-4 small-12 columns end text-center">
                        <%= link_to "#{brand.marks}", brand_path(brand), class: "button info round text-center", style: "width: 200px;" %>
                      </div>
                    <% end %>
                  <% end %>
                  </div>
              </ul>
            </div>
          </li>

        </ul>
  </div>

  </div>

  <% end %>

       
